{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab", "tabs", "http://*/*", "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts":[{
        "js": ["content_script.js"],
        "matches": ["http://*/*", "https://*/*"]
  }],
  "web_accessible_resources": ["script.js"],
  "browser_action": {
    "default_title": "Make this page red"
  },
  "manifest_version": 2
}
